{
  "name": "@contentlayer/source-files",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./schema/defs": {
      "import": "./dist/schema/defs/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "schema": [
        "./dist/schema"
      ]
    }
  },
  "files": [
    "./dist/*.{js,ts,map}",
    "./dist/!(__test__)/**/*.{js,ts,map}",
    "./src",
    "./package.json"
  ],
  "scripts": {
    "test": "TZ='GMT' ava --color"
  },
  "dependencies": {
    "@contentlayer/core": "0.1.0",
    "@contentlayer/utils": "0.1.0",
    "chokidar": "^3.5.3",
    "date-fns-tz": "^1.2.2",
    "glob": "^7.2.0",
    "glob-promise": "^4.2.2",
    "gray-matter": "^4.0.3",
    "minimatch": "^3.0.4",
    "ts-pattern": "^3.3.3",
    "unified": "^10.1.1",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@types/faker": "^5.5.8",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^16.10.2",
    "@types/tap": "^15.0.5",
    "@types/yaml": "^1.9.7",
    "ava": "^4.0.1",
    "faker": "^5.5.3"
  },
  "ava": {
    "files": [
      "dist/__test__/**/*.spec.js"
    ],
    "ignoredByWatcher": [
      "src/**/*"
    ]
  }
}